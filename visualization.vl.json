{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Happiness Score Rank 2020",
  "width": 625,
  "height": 300,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/DumIlin/3179/main/assignment2/js/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Regional_indicator",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Show All",
          "Sub-Saharan Africa",
          "Western Europe",
          "Central and Eastern Europe",
          "Latin America and Caribbean",
          "Middle East and North Africa"
        ],
        "labels": [
          "Show All",
          "Sub-Saharan Africa",
          "Western Europe",
          "Central and Eastern Europe",
          "Latin America and Caribbean",
          "Middle East and North Africa"
        ],
        "name": "Regional: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/DumIlin/3179/main/assignment2/2020.csv"
        },
        "key": "Country name",
        "fields": ["Ladder score", "Regional indicator"]
      }
    },
    {
      "filter": "Regional_indicator == null || datum.Region == Regional_indicator"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Ladder score",
      "type": "quantitative",
      "scale": {"type": "linear"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
      {"field": "Ladder score", "type": "quantitative"}
    ]
  },
  "config": {}
}